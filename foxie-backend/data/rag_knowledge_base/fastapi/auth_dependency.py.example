    # user = User(**user_doc)
    # return user
    
    # MONGODB VERSION (Beanie ODM - preferred):
    # from app.models.user import User
    # user = await User.find_one(User.username == token_data.username)
    # if not user:
    #     raise credentials_exception
    # return user
    
    # The AI should choose the appropriate version based on database_type
    # For now, this shows SQL version as example
    from app.database.db_session import get_db
    from app.crud.user import get_user_by_username
    db = next(get_db())
    user = get_user_by_username(db, username=token_data.username)
    if user is None:
        raise credentials_exception
    return user
